<h1>Tasks</h1>
<%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr id="<%= dom_id(task) %>">
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
